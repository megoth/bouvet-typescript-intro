doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='/css/app.css')
  body(class=bodyclass)
    article.deck-container
      block content
        section.slide
          h1 Presentation on Questback front-end architecture
      script
        | document.querySelector('.deck-container').setAttribute('style', 'visibility: hidden');
  script(src='/js/jquery.min.js')
  script(src='/js/deck.core.js')
  script(src='/js/slideshow.js')
  script(src='/js/modernizr.custom.js')
  script
    | document.querySelector('.deck-container').setAttribute('style', 'visibility: visible');

